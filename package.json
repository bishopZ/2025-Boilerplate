{
  "name": "2025-boilerplate",
  "description": "a local-first web app boilerplate for 2025",
  "author": "BishopZ",
  "private": true,
  "version": "1.0.1",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bishopz/2025-boilerplate"
  },
  "type": "module",
  "scripts": {
    "dev": "nodemon -w src/server -x tsx --env-file .env src/server/main.ts",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "preview": "vite preview",
    "start": "NODE_ENV=production tsx src/server/main.ts"
  },
  "dependencies": {
    "@emotion/react": "11.14.0",
    "@reduxjs/toolkit": "2.7.0",
    "cookie-parser": "1.4.7",
    "crypto-js": "4.2.0",
    "ejs": "3.1.10",
    "express": "5.1.0",
    "express-session": "1.18.1",
    "next-themes": "0.4.6",
    "npm": "11.3.0",
    "passport": "0.7.0",
    "passport-local": "1.0.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-error-boundary": "5.0.0",
    "react-icons": "5.5.0",
    "react-redux": "9.2.0",
    "tsx": "4.19.4",
    "typescript": "5.7.2",
    "vite-express": "0.20.0"
  },
  "devDependencies": {
    "@eslint/js": "9.22.0",
    "@stylistic/eslint-plugin": "4.2.0",
    "@types/cookie-parser": "1.4.8",
    "@types/crypto-js": "4.2.2",
    "@types/ejs": "3.1.5",
    "@types/express": "4.17.21",
    "@types/express-session": "1.18.1",
    "@types/node": "20.9.3",
    "@types/passport": "1.0.17",
    "@types/passport-local": "1.0.38",
    "@types/react": "19.0.10",
    "@types/react-dom": "19.0.4",
    "@vitejs/plugin-react": "4.3.4",
    "eslint": "9.22.0",
    "eslint-plugin-react-dom": "1.48.4",
    "eslint-plugin-react-hooks": "5.2.0",
    "eslint-plugin-react-refresh": "0.4.19",
    "eslint-plugin-react-x": "1.48.4",
    "globals": "16.0.0",
    "nodemon": "3.0.1",
    "typescript-eslint": "8.31.0",
    "vite": "6.3.1",
    "vite-tsconfig-paths": "5.1.4"
  },
  "engines": {
    "node": "22.15.0",
    "npm": "11.3.0"
  },
  "browserslist": {
    "production": [">0.2%", "not dead", "not op_mini all"],
    "development": ["last 1 chrome version", "last 1 firefox version", "last 1 safari version"]
  }
